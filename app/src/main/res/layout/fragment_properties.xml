<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardview_properties"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_margin="20dp"
        android:padding="20dp"

        android:background="@drawable/shape_properties_card"

        android:elevation="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_properties_weight_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Weight"
            android:textColor="#66000000"

            app:layout_constraintHorizontal_bias="0.3"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_properties_weight_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="8dp"

            android:textColor="@color/black"

            app:layout_constraintTop_toBottomOf="@id/textview_properties_weight_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_properties_weight_label"
            app:layout_constraintEnd_toEndOf="@id/textview_properties_weight_label"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_properties_height_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Height"
            android:textColor="#66000000"

            app:layout_constraintHorizontal_bias="0.7"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_properties_height_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="8dp"

            android:textColor="@color/black"

            app:layout_constraintTop_toBottomOf="@id/textview_properties_height_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_properties_height_label"
            app:layout_constraintEnd_toEndOf="@id/textview_properties_height_label"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>